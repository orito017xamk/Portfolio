@page
@model pilkkikilpailu.Pages.IlmoittauduModel
@{

}


@if (Model.Virhe == true){ 
  <h1>Ilmoittautuminen</h1>
  



<p>Pakolliset kentät merkkitty *</p>


@if (Model.VirheIlmoitus != null){

  <div class="alert alert-danger mt-3"> @Model.VirheIlmoitus </div>
  
}

<form method="post">

   <div class="form-group">
 <label class="col-sm-2 col-form-label">Etunimi: *</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="etunimi" placeholder="Etunimi" >
    </div>
   </div>

    <div class="form-group">
 <label class="col-sm-2 col-form-label">Sukunimi: *</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="sukunimi" placeholder="Sukunimi" >
    </div>
   </div>

      <div class="form-group">
 <label class="col-sm-2 col-form-label">Asuinpaikkakunta:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" placeholder="Paikkakunta" >
    </div>
   </div>

      <div class="form-group">
 <label class="col-sm-2 col-form-label">Puhelinumero</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="puh" placeholder="Puhelinnumero">
    </div>
   </div>

       <div class="form-group">
 <label class="col-sm-2 col-form-label">Sähköposti</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" name="email" placeholder="Sähköposti">
    </div>
   </div>
 
  <div class="form-group">
    <label class="col-sm-2 col-form-label">Sarja</label>
     <div class="col-sm-10">
    <select class="form-control" name="sarja">
      
<option disabled selected>
    <li class="list-group-item">Valitse Sarja</li>
</option>
  
        @foreach (string sarja in Model.Sarjat)
                {
                    <option>
                   
                <li class="list-group-item" name="sarja">@sarja</li>
         
                     </option>
                }
    </select>
  </div>
  </div>

<input class="btn btn-primary" type="submit" value="Osallistu" />




</form>

} else {

    <h1>Kiitos osallistumisesta, @Model.Etunimi!</h1>
    <a href="/">Palaa etusivulle.</a>

}




